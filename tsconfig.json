{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "outDir": "dist/scripts",
  },
  "include": [
    "src/_includes/scripts/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "functions/**/*"
  ]
}