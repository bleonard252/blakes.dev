{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}